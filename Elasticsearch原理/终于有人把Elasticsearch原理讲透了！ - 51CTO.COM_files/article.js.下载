$(".sear-1").focus(function(){
    $(".nav-rsear").css("border-color","#be0000");
    $(".sear-2").css("background","url(http://static4.51cto.com/51cto/cms/2016/images/searchhh.png)");
});
$('.sear-1').blur(function () {
    $(".nav-rsear").css("border-color","#d4d4d4");
    $(".sear-2").css("background","url(http://static2.51cto.com/51cto/cms/2016/images/search.png)");
});

$(".dzk dt").click(function(){
        var oIndex = $(".dzk dt").index(this);
        $(this).addClass("show").siblings().removeClass("show");
        $(".dzk li").eq(oIndex).show().siblings().hide();
    }
)

$(".news dt").click(function(){
        var oIndex = $(".news dt").index(this);
        $(this).addClass("show").siblings().removeClass("show");
        $(".news li").eq(oIndex).show().siblings().hide();

    }
)

$(".bjtj dl").mouseover(function(){
        $(this).css({"border-bottom":"1px dashed #be0000"});
        $(this).find("dt,dt a").css({"background-color":"#be0000","color":"#fff"});
        $(this).find("dd,dd a").css({"color":"#be0000"});
    }
)
$(".bjtj dl").mouseout(function(){
        $(this).css({"border-bottom":"1px dashed #cbcbcb"});
        $(this).find("dt,dt a").css({"background-color":"#f2f2f2","color":"#666"});
        $(this).find("dd,dd a").css({"color":"#333"});
    }
)

$(".ewm").mouseover(function(){
        $(".ewm img").show();
    }
)
$(".ewm").mouseout(function(){
        $(".ewm img").hide();
    }
)

setTimeout(function(){

},5000)

